<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/steller_logo_bg2">

    <TextView
        android:id="@+id/tvSteller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="6%"
        app:layout_marginLeftPercent="30%"
        android:text="STELLER"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:textSize="35sp"
        ></TextView>

    <TextView
        android:id="@+id/tvStellerLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="2%"
        app:layout_marginLeftPercent="18%"
        android:text="Everyone has a story to tell"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_below="@+id/tvSteller"></TextView>


